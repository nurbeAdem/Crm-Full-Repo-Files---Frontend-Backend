{
"openapi": "3.0.0",
"info": {
"title": "CRM Mock API",
"version": "1.0.0",
"description": "JSON Server mock API for CRM project (leads, activities)"
},
"servers": [
{ "url": "http://localhost:4000", "description": "Local JSON Server" }
],
"paths": {
"/leads": {
"get": {
"summary": "List leads",
"responses": { "200": { "description": "A list of leads" } }
},
"post": {
"summary": "Create lead",
"requestBody": { "required": true },
"responses": { "201": { "description": "Lead created" } }
}
},
"/leads/{id}": {
"get": { "summary": "Get lead by id", "responses": { "200": { "description": "Lead" } } },
"patch": { "summary": "Update lead", "responses": { "200": { "description": "Lead updated" } } },
"delete": { "summary": "Delete lead", "responses": { "204": { "description": "Deleted" } } }
},
"/leads/{id}/activities": {
"post": { "summary": "Add activity", "responses": { "201": { "description": "Activity added" } } }
}
}
}
